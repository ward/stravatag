{
  "manifest_version": 2,
  "name": "Stravatag",
  "version": "0.3",

  "description": "",

  "content_scripts": [
    {
      "matches": ["*://*.strava.com/*"],
      "js": ["content_scripts/strava.js"]
    },
    {
      "matches": ["*://*.reddit.com/*"],
      "js": [
        "content_scripts/reddit.js"
      ],
      "css": [
        "content_scripts/reddit.css"
      ]
    }
  ],

  "permissions": [
    "storage"
  ],

  "options_ui": {
    "page": "options/options.html",
    "browser_style": true
  }

}
